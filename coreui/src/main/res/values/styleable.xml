<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--通用属性定义开始-->
    <!--默认配置-->
    <attr name="text" format="reference|string" />

    <!--按钮文字颜色-->
    <attr name="textColor" format="reference|color"/>

    <!--按钮文字大小-->
    <attr name="textSize" format="reference|dimension" />

    <!--边框宽度-->
    <attr name="border_width" format="dimension" />

    <!--边框颜色-->
    <attr name="border_color" format="color" />

    <!--按钮圆角，如果单独设置会覆盖此设置-->
    <attr name="corner" format="dimension" />
    <!--左上角圆角半径-->
    <attr name="corner_left_top" format="dimension" />
    <!--左下角圆角半径-->
    <attr name="corner_left_bottom" format="dimension" />
    <!--右上角圆角半径-->
    <attr name="corner_right_top" format="dimension" />
    <!--右下角圆角半径-->
    <attr name="corner_right_bottom" format="dimension" />

    <!--通用属性定义结束-->

    <declare-styleable name="RoundedImageView">
        <attr name="border_width"/>
        <attr name="border_color"/>
        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="corner" />
        <!--左上角圆角半径-->
        <attr name="corner_left_top" />
        <!--左下角圆角半径-->
        <attr name="corner_left_bottom" />
        <!--右上角圆角半径-->
        <attr name="corner_right_top"/>
        <!--右下角圆角半径-->
        <attr name="corner_right_bottom"/>


        <attr name="round_background" format="boolean" />
        <attr name="mutate_background" format="boolean" />
        <attr name="oval" format="boolean" />
        <attr name="android:scaleType" />

        <attr name="tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <!--跑马灯效果控件属性定义-->
    <declare-styleable name="TextBannerViewStyle">
        <attr name="interval" format="integer|reference"/>
        <attr name="animDuration" format="integer|reference"/>
        <attr name="isSingleLine" format="boolean"/>

        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="flags">
            <enum name="strike" value="0"/>
            <enum name="underline" value="1"/>
        </attr>
        <attr name="gravity">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="direction">
            <enum name="bottom_to_top" value="0"/>
            <enum name="top_to_bottom" value="1"/>
            <enum name="right_to_left" value="2"/>
            <enum name="left_to_right" value="3"/>
        </attr>
        <attr name="typeface">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="italic_bold" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SuperButton">
        <!--文字是否单行，默认单行-->
        <attr name="singleLine" format="boolean" />

        <attr name="text"/>
        <attr name="textColor"/>
        <attr name="textSize"/>
        <attr name="border_width"/>
        <attr name="border_color"/>

        <!--默认背景颜色-->
        <attr name="color_normal" format="reference|color" />
        <!--按压时的背景颜色-->
        <attr name="color_pressed" format="reference|color" />

        <!--图片在文字左边-->
        <attr name="drawable_left" format="reference|color" />
        <!--图片在文字右边-->
        <attr name="drawable_right" format="reference|color" />
        <!--图片在文字上边-->
        <attr name="drawable_top" format="reference|color" />
        <!--图片在文字下边-->
        <attr name="drawable_bottom" format="reference|color" />
        <!--图片距文字的距离-->
        <attr name="drawable_padding" format="dimension" />
        <!--图标根据文字大小自动缩放图标-->
        <attr name="drawable_auto" format="boolean" />

        <!--只有图片的情况,此时会忽略文字，即便设置-->
        <attr name="drawable_middle" format="reference|color" />
        <!--图片在中间时宽-->
        <attr name="drawable_middle_width" format="dimension" />
        <!--图片在中间时高-->
        <attr name="drawable_middle_height" format="dimension" />

        <!--形状-->
        <attr name="shape" format="enum">
            <!--圆形-->
            <enum name="CIRCLE" value="1" />
            <!--矩形-->
            <enum name="RECT" value="2" />
        </attr>

        <!--按钮背景是渐变色时设置-->
        <!--开始颜色-->
        <attr name="color_start" format="color" />
        <!--结束颜色-->
        <attr name="color_end" format="color" />
        <!--颜色方向-->
        <attr name="color_direction" format="enum">
            <!--从上到下-->
            <enum name="TOP_BOTTOM" value="0x1" />
            <!--从右上到左下-->
            <enum name="TR_BL" value="0x2" />
            <!--从右到左-->
            <enum name="RIGHT_LEFT" value="0x3" />
            <!--从右下到左上-->
            <enum name="BR_TL" value="0x4" />
            <!--从下到上-->
            <enum name="BOTTOM_TOP" value="0x5" />
            <!--从左下到右上-->
            <enum name="BL_TR" value="0x6" />
            <!--从左到右-->
            <enum name="LEFT_RIGHT" value="0x7" />
            <!--从左上到右下-->
            <enum name="TL_BR" value="0x8" />
        </attr>

        <!--按钮圆角，如果单独设置会覆盖此设置-->
        <attr name="corner" />
        <!--左上角圆角半径-->
        <attr name="corner_left_top" />
        <!--左下角圆角半径-->
        <attr name="corner_left_bottom" />
        <!--右上角圆角半径-->
        <attr name="corner_right_top"/>
        <!--右下角圆角半径-->
        <attr name="corner_right_bottom"/>

        <!--按钮是否可以点击-->
        <attr name="button_click_able" format="boolean" />

        <!--阴影开始颜色-->
        <attr name="color_shadow_start" format="color" />
        <!--阴影结束颜色-->
        <attr name="color_shadow_end" format="color" />
        <!--阴影大小-->
        <attr name="shadow_size" format="dimension" />

    </declare-styleable>

    <declare-styleable name="BubbleView">
        <!--原件-->
        <attr name="corner"/>

        <!--箭头的高度-->
        <attr name="arrowHeight" format="dimension" />

        <!--箭头的高度-->
        <attr name="arrowWidth" format="dimension" />

        <!--背景色-->
        <attr name="bubbleColor" format="color" />

        <!--箭头的距离起始位置的距离-->
        <attr name="arrowPosition" format="dimension" />

        <!--箭头是否在中间-->
        <attr name="arrowCenter" format="boolean" />

        <!--箭头方向-->
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SubsamplingScaleImageView">
        <attr name="src" format="reference"/>
        <attr name="assetName" format="string"/>
        <attr name="panEnabled" format="boolean"/>
        <attr name="zoomEnabled" format="boolean"/>
        <attr name="quickScaleEnabled" format="boolean"/>
        <attr name="tileBackgroundColor" format="color"/>
    </declare-styleable>

    <!--流布局相关的属性值-->
    <declare-styleable name="FlowLayout">
        <attr name="flFlow" format="boolean"/>
        <attr name="flChildSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="flMinChildSpacing" format="dimension"/>
        <attr name="flChildSpacingForLastRow" format="enum|dimension">
            <enum name="auto" value="-65536"/>
            <enum name="align" value="-65537"/>
        </attr>
        <attr name="flRowSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="flRtl" format="boolean"/>
        <attr name="flMaxRows" format="integer"/>
        <attr name="flRowVerticalGravity" format="enum">
            <enum name="auto" value="-65536"/>
            <enum name="top" value="0x30"/>
            <enum name="center" value="0x10"/>
            <enum name="bottom" value="0x50"/>
        </attr>
        <attr name="android:gravity"/>
    </declare-styleable>


    <!-- 圆角矩形背景色 -->
    <attr name="backgroundColor"/>
    <!-- 圆角弧度,单位dp-->
    <attr name="cornerRadius" format="dimension"/>

    <!-- indicator -->
    <!-- 设置显示器颜色 -->
    <attr name="indicator_color" format="color"/>
    <!-- 设置显示器高度 -->
    <attr name="indicator_height" format="dimension"/>
    <!-- 设置显示器固定宽度 -->
    <attr name="indicator_width" format="dimension"/>
    <!-- 设置显示器margin,当indicator_width大于0,无效 -->
    <attr name="indicator_margin_left" format="dimension"/>
    <attr name="indicator_margin_top" format="dimension"/>
    <attr name="indicator_margin_right" format="dimension"/>
    <attr name="indicator_margin_bottom" format="dimension"/>
    <!-- 设置显示器圆角弧度-->
    <attr name="indicator_corner_radius" format="dimension"/>
    <!-- 设置显示器上方还是下方,只对圆角矩形有用-->
    <attr name="indicator_gravity" format="enum">
        <enum name="TOP" value="48"/>
        <enum name="BOTTOM" value="80"/>
    </attr>
    <!-- 设置显示器为常规|三角形|背景色块|-->
    <attr name="indicator_style" format="enum">
        <enum name="NORMAL" value="0"/>
        <enum name="TRIANGLE" value="1"/>
        <enum name="BLOCK" value="2"/>
    </attr>
    <!-- 设置显示器长度与title一样长,只有在STYLE_NORMAL并且indicatorWidth小于零有效-->
    <attr name="indicator_width_equal_title" format="boolean"/>
    <!-- 设置显示器支持动画-->
    <attr name="indicator_anim_enable" format="boolean"/>
    <!-- 设置显示器动画时间-->
    <attr name="indicator_anim_duration" format="integer"/>
    <!-- 设置显示器支持动画回弹效果-->
    <attr name="indicator_bounce_enable" format="boolean"/>

    <!-- underline -->
    <!-- 设置下划线颜色 -->
    <attr name="underline_color" format="color"/>
    <!-- 设置下划线高度 -->
    <attr name="underline_height" format="dimension"/>
    <!-- 设置下划线上方还是下方-->
    <attr name="underline_gravity" format="enum">
        <enum name="TOP" value="48"/>
        <enum name="BOTTOM" value="80"/>
    </attr>

    <!-- divider -->
    <!-- 设置分割线颜色 -->
    <attr name="divider_color" format="color"/>
    <!-- 设置分割线宽度 -->
    <attr name="divider_width" format="dimension"/>
    <!-- 设置分割线的paddingTop和paddingBottom -->
    <attr name="divider_padding" format="dimension"/>

    <!-- tab -->
    <!-- 设置tab的paddingLeft和paddingRight -->
    <attr name="tab_padding" format="dimension"/>

    <!-- 设置tab的background-->
    <attr name="tab_color" format="color"/>
    <attr name="tab_margin_left" format="dimension"/>
    <attr name="tab_margin_top" format="dimension"/>
    <attr name="tab_margin_right" format="dimension"/>
    <attr name="tab_margin_bottom" format="dimension"/>


    <!-- 设置tab大小等分 -->
    <attr name="tab_space_equal" format="boolean"/>
    <!-- 设置tab固定大小 -->
    <attr name="tab_width" format="dimension"/>

    <!-- title -->
    <!-- 设置字体选中颜色 -->
    <attr name="textSelectColor" format="color"/>
    <!-- 设置字体未选中颜色 -->
    <attr name="textUnSelectColor" format="color"/>
    <!-- 设置字体加粗 -->
    <attr name="textBold" format="enum">
        <enum name="NONE" value="0"/>
        <enum name="SELECT" value="1"/>
        <enum name="BOTH" value="2"/>
    </attr>
    <!-- 设置字体全大写 -->
    <attr name="textAllCaps" format="boolean"/>


    <declare-styleable name="SlidingTabLayout">

        <!-- BackGround -->
        <attr name="backgroundColor"/>
        <attr name="cornerRadius"/>

        <!-- indicator -->
        <attr name="indicator_color"/>
        <attr name="indicator_height"/>
        <attr name="indicator_width"/>
        <attr name="indicator_margin_left"/>
        <attr name="indicator_margin_top"/>
        <attr name="indicator_margin_right"/>
        <attr name="indicator_margin_bottom"/>
        <attr name="indicator_corner_radius"/>
        <attr name="indicator_gravity"/>
        <attr name="indicator_style"/>
        <attr name="indicator_width_equal_title"/>

        <!-- underline -->
        <attr name="underline_color"/>
        <attr name="underline_height"/>
        <attr name="underline_gravity"/>

        <!-- divider -->
        <attr name="divider_color"/>
        <attr name="divider_width"/>
        <attr name="divider_padding"/>

        <!-- tab -->
        <attr name="tab_padding"/>
        <attr name="tab_space_equal"/>
        <attr name="tab_color"/>
        <attr name="tab_margin_left"/>
        <attr name="tab_margin_top"/>
        <attr name="tab_margin_right"/>
        <attr name="tab_margin_bottom"/>
        <attr name="tab_width"/>

        <!-- title -->
        <attr name="textSize"/>
        <attr name="textSelectColor"/>
        <attr name="textUnSelectColor"/>
        <attr name="textBold"/>
        <attr name="textAllCaps"/>

    </declare-styleable>

    <declare-styleable name="CommonTabLayout">

        <!-- BackGround -->
        <attr name="backgroundColor"/>
        <attr name="cornerRadius"/>

        <!-- indicator -->
        <attr name="indicator_color"/>
        <attr name="indicator_height"/>
        <attr name="indicator_width"/>
        <attr name="indicator_margin_left"/>
        <attr name="indicator_margin_top"/>
        <attr name="indicator_margin_right"/>
        <attr name="indicator_margin_bottom"/>
        <attr name="indicator_corner_radius"/>
        <attr name="indicator_gravity"/>
        <attr name="indicator_style"/>
        <attr name="indicator_anim_enable"/>
        <attr name="indicator_anim_duration"/>
        <attr name="indicator_bounce_enable"/>

        <!-- underline -->
        <attr name="underline_color"/>
        <attr name="underline_height"/>
        <attr name="underline_gravity"/>

        <!-- divider -->
        <attr name="divider_color"/>
        <attr name="divider_width"/>
        <attr name="divider_padding"/>

        <!-- tab -->
        <attr name="tab_padding"/>
        <attr name="tab_space_equal"/>
        <attr name="tab_width"/>

        <!-- title -->
        <attr name="textSize"/>
        <attr name="textSelectColor"/>
        <attr name="textUnSelectColor"/>
        <attr name="textBold"/>
        <attr name="textAllCaps"/>

        <!-- icon -->
        <!-- 设置icon宽度 -->
        <attr name="iconWidth" format="dimension"/>
        <!-- 设置icon高度 -->
        <attr name="iconHeight" format="dimension"/>
        <!-- 设置icon是否可见 -->
        <attr name="iconVisible" format="boolean"/>
        <!-- 设置icon显示位置,对应Gravity中常量值 -->
        <attr name="icon_Gravity" format="enum">
            <enum name="LEFT" value="3"/>
            <enum name="TOP" value="48"/>
            <enum name="RIGHT" value="5"/>
            <enum name="BOTTOM" value="80"/>
        </attr>

        <!-- 设置icon与文字间距 -->
        <attr name="iconMargin" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="SegmentTabLayout">
        <!-- indicator -->
        <attr name="indicator_color"/>
        <attr name="indicator_height"/>
        <attr name="indicator_margin_left"/>
        <attr name="indicator_margin_top"/>
        <attr name="indicator_margin_right"/>
        <attr name="indicator_margin_bottom"/>
        <attr name="indicator_corner_radius"/>
        <attr name="indicator_anim_enable"/>
        <attr name="indicator_anim_duration"/>
        <attr name="indicator_bounce_enable"/>

        <!-- divider -->
        <attr name="divider_color"/>
        <attr name="divider_width"/>
        <attr name="divider_padding"/>

        <!-- tab -->
        <attr name="tab_padding"/>
        <attr name="tab_margin_left"/>
        <attr name="tab_margin_top"/>
        <attr name="tab_margin_right"/>
        <attr name="tab_margin_bottom"/>
        <attr name="tab_space_equal"/>
        <attr name="tab_width"/>

        <!-- title -->
        <attr name="textSize"/>
        <attr name="textSelectColor"/>
        <attr name="textUnSelectColor"/>
        <attr name="textBold"/>
        <attr name="textAllCaps"/>

        <attr name="bar_color" format="color"/>
        <attr name="bar_stroke_color" format="color"/>
        <attr name="bar_stroke_width" format="dimension"/>

    </declare-styleable>

    <declare-styleable name="MsgView">
        <!-- 圆角矩形背景色 -->
        <attr name="backgroundColor"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="cornerRadius"/>
        <!-- 圆角弧度,单位dp-->
        <attr name="strokeWidth" format="dimension"/>
        <!-- 圆角边框颜色-->
        <attr name="strokeColor" format="color"/>
        <!-- 圆角弧度是高度一半-->
        <attr name="isRadiusHalfHeight" format="boolean"/>
        <!-- 圆角矩形宽高相等,取较宽高中大值-->
        <attr name="isWidthHeightEqual" format="boolean"/>
    </declare-styleable>
</resources>
