<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.mbg.module.ui.view.imageview.PartClickImageView
        android:id="@+id/img_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_girl"/>

    <com.mbg.module.ui.view.layout.swipe.ConfigurableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mbg.module.ui.view.imageview.DraggableImageView
            android:id="@+id/draggable_image_view_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="30dp"
            android:background="@color/black"
            app:boundary_bottom="true"
            app:boundary_left="true"
            app:boundary_right="true"
            app:boundary_top="true"
            app:max_scale="1"
            app:scale_center="finger_center"
            app:trigger_distance="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:weightSum="4">

            <com.mbg.module.ui.view.imageview.DraggableImageView
                android:id="@+id/draggable_image_view_2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:boundary_bottom="true"
                app:boundary_left="true"
                app:boundary_right="true"
                app:boundary_top="true"
                app:max_scale="1"
                app:trigger_distance="1dp" />

            <com.mbg.module.ui.view.imageview.DraggableImageView
                android:id="@+id/draggable_image_view_3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:boundary_bottom="true"
                app:boundary_left="true"
                app:boundary_right="true"
                app:boundary_top="true"
                app:max_scale="1"
                app:trigger_distance="1dp" />

            <com.mbg.module.ui.view.imageview.DraggableImageView
                android:id="@+id/draggable_image_view_4"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:boundary_bottom="true"
                app:boundary_left="true"
                app:boundary_right="true"
                app:boundary_top="true"
                app:max_scale="1"
                app:trigger_distance="1dp" />

            <com.mbg.module.ui.view.imageview.DraggableImageView
                android:id="@+id/draggable_image_view_5"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@color/black"
                app:boundary_bottom="true"
                app:boundary_left="true"
                app:boundary_right="true"
                app:boundary_top="true"
                app:max_scale="1"
                app:trigger_distance="1dp" />

        </LinearLayout>


    </com.mbg.module.ui.view.layout.swipe.ConfigurableFrameLayout>


    <com.mbg.module.ui.view.imageview.TransformativeImageView
        android:id="@+id/transformative_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/black"
        app:max_scale="4"
        app:min_scale="1"
        app:open_animator="true"
        app:open_rotate_revert="true"
        app:open_scale_revert="true"
        app:open_translate_revert="true"
        app:revert_duration="300"
        app:scale_center="finger_center" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button2"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button4"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner="5dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner="100dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner="10dp" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:border_color="@color/colorPrimary"
                app:border_width="2dp" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner_left_bottom="20dp"
                app:corner_left_top="20dp"
                app:corner_right_bottom="20dp"
                app:corner_right_top="20dp" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:oval="true" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:border_color="@color/colorAccent"
                app:border_width="2dp"
                app:oval="true" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
