<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gravity="center"
        app:mode="single" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gravity="center"
        app:mode="single"
        app:progress_drawable="@drawable/progress"
        app:progress_drawable_default="@drawable/progress_default"
        app:thumb_drawable="@drawable/thumb_gradient" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gravity="center"
        app:mode="single"
        app:thumb_drawable="@drawable/thumb_green_alpha"
        app:thumb_height="20dp"
        app:thumb_inactivated_drawable="@drawable/thumb_activated"
        app:thumb_scale_ratio="1.4"
        app:thumb_width="20dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gravity="center"
        app:indicator_height="30dp"
        app:indicator_padding_left="2dp"
        app:indicator_padding_right="2dp"
        app:indicator_show_mode="showWhenTouch"
        app:mode="single"
        app:thumb_drawable="@drawable/thumb_green_alpha"
        app:thumb_height="20dp"
        app:thumb_inactivated_drawable="@drawable/thumb_activated"
        app:thumb_width="20dp" />


    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="bottom"
        app:indicator_background_color="@color/colorRed"
        app:indicator_height="wrap_content"
        app:indicator_padding_bottom="10dp"
        app:indicator_padding_left="15dp"
        app:indicator_padding_right="15dp"
        app:indicator_padding_top="10dp"
        app:indicator_radius="5dp"
        app:indicator_show_mode="alwaysShow"
        app:indicator_text_size="12sp"
        app:indicator_width="50dp"
        app:mode="single"
        app:progress_color="@color/colorRed"
        app:progress_default_color="@color/color_6596ff"
        app:thumb_drawable="@drawable/thumb_driver"
        app:thumb_height="25dp"
        app:thumb_width="30dp"
        app:tick_mark_mode="number"
        app:tick_mark_text_array="@array/markArray" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_single6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:thumbs_gravity="bottom"
        app:indicator_drawable="@drawable/indicator_cloud"
        app:indicator_height="46dp"
        app:indicator_padding_bottom="15dp"
        app:indicator_show_mode="alwaysShowAfterTouch"
        app:indicator_text_color="@android:color/darker_gray"
        app:indicator_text_size="12sp"
        app:indicator_width="50dp"
        app:mode="single"
        app:progress_color="@color/colorRed"
        app:progress_default_color="@color/color_14c7de"
        app:thumb_drawable="@drawable/thumb_driver"
        app:thumb_height="25dp"
        app:thumb_width="30dp"
        app:tick_mark_layout_gravity="bottom"
        app:tick_mark_mode="other"
        app:tick_mark_text_array="@array/markArray3"
        app:tick_mark_text_color="@color/colorRed"
        app:tick_mark_text_margin="15dp" />
</LinearLayout>

