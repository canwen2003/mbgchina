<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#151515">

    <com.mbg.module.ui.view.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_duration="1000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center_horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:orientation="vertical"
                android:background="@drawable/icon_profile_defailt_avatar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:layout_gravity="bottom">
                    <View
                        android:id="@+id/view_item_1"
                        android:layout_width="192dp"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_rectangle_bg_gray"/>

                    <View
                        android:id="@+id/view_item_2"
                        android:layout_width="109dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/view_item_1"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_rectangle_bg_gray"/>

                    <View
                        android:id="@+id/view_item_3"
                        android:layout_width="109dp"
                        android:layout_height="10dp"
                        android:layout_below="@id/view_item_2"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/shape_rectangle_bg_gray"/>


                    <View
                        android:id="@id/view_item_4"
                        android:layout_marginTop="20dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/shape_rounded_rectangle_bg_gray_12dp"/>

                </RelativeLayout>
            </FrameLayout>

            <View
                android:layout_width="223dp"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rectangle_bg_gray"/>
            <View
                android:layout_width="292dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rectangle_bg_gray"/>

            <View
                android:layout_width="79dp"
                android:layout_height="10dp"
                android:layout_marginTop="34dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rectangle_bg_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/shape_rounded_rectangle_bg_gray_6dp"/>
                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_rounded_rectangle_bg_gray_6dp"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_rounded_rectangle_bg_gray_6dp"/>

                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_rounded_rectangle_bg_gray_6dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:background="@drawable/shape_rounded_rectangle_bg_gray_12dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_weight="1"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/shape_rounded_rectangle_bg_light_gray_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical">

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_circle_bg_gray"/>

                <View
                    android:layout_width="79dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_rectangle_bg_gray"/>
            </LinearLayout>


            <View
                android:layout_width="202dp"
                android:layout_height="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rectangle_bg_gray"/>

            <View
                android:layout_width="292dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shape_rectangle_bg_gray"/>

        </LinearLayout>


    </com.mbg.module.ui.view.shimmer.ShimmerFrameLayout>
</LinearLayout>
