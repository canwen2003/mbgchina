<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:gravity="center"
        app:mode="single"
        app:progress_drawable="@drawable/progress"
        app:progress_drawable_default="@drawable/progress_default"
        app:step_auto_bonding="true"
        app:step_height="23dp"
        app:step_width="23dp"
        app:steps="3"
        app:thumb_drawable="@drawable/thumb_ghost"
        app:thumb_height="31dp"
        app:thumb_width="25dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="center"
        app:mode="range"
        app:progress_drawable="@drawable/progress"
        app:progress_drawable_default="@drawable/progress_default"
        app:step_auto_bonding="true"
        app:step_height="23dp"
        app:step_width="23dp"
        app:steps="3"
        app:thumb_drawable="@drawable/thumb_ghost"
        app:thumb_height="31dp"
        app:thumb_width="25dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="bottom"
        app:indicator_arrow_size="10dp"
        app:indicator_background_color="@color/colorAccent"
        app:indicator_padding_bottom="5dp"
        app:indicator_padding_left="5dp"
        app:indicator_padding_right="5dp"
        app:indicator_padding_top="5dp"
        app:indicator_show_mode="showWhenTouch"
        app:mode="single"
        app:progress_color="@color/colorAccent"
        app:step_auto_bonding="true"
        app:step_color="@color/colorAccent"
        app:step_height="10dp"
        app:step_radius="5dp"
        app:step_width="10dp"
        app:steps="5"
        app:thumb_drawable="@drawable/thumb_green"
        app:thumb_height="18dp"
        app:thumb_scale_ratio="1.25"
        app:thumb_width="18dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="center"
        app:mode="range"
        app:progress_color="@color/colorProgress"
        app:step_auto_bonding="false"
        app:step_color="@color/colorProgress"
        app:step_height="10dp"
        app:step_radius="5dp"
        app:step_width="10dp"
        app:steps="5" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="bottom"
        app:mode="single"
        app:progress_color="@color/colorProgress"
        app:step_auto_bonding="true"
        app:step_color="@color/colorProgress"
        app:step_height="15dp"
        app:step_radius="4dp"
        app:step_width="10dp"
        app:steps="4"
        app:thumb_drawable="@drawable/thumb_yellow_stroke"
        app:tick_mark_layout_gravity="top"
        app:tick_mark_mode="other"
        app:tick_mark_text_array="@array/wordsArray"
        app:tick_mark_text_margin="20dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="bottom"
        app:indicator_background_color="@color/colorProgress"
        app:indicator_height="30dp"
        app:indicator_show_mode="showWhenTouch"
        app:indicator_width="50dp"
        app:mode="single"
        app:progress_color="@color/colorProgress"
        app:step_auto_bonding="true"
        app:step_color="@color/colorProgress"
        app:step_height="10dp"
        app:step_width="5dp"
        app:steps="4"
        app:thumb_drawable="@drawable/thumb_yellow_stroke"
        app:tick_mark_layout_gravity="bottom"
        app:tick_mark_mode="other"
        app:tick_mark_text_array="@array/wordsArray"
        app:tick_mark_text_margin="20dp" />

    <com.mbg.module.ui.view.seekBar.RangeSeekBar
        android:id="@+id/sb_steps_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:thumbs_gravity="bottom"
        app:mode="range"
        app:progress_color="@color/colorAccent"
        app:step_auto_bonding="true"
        app:step_color="@color/colorAccent"
        app:step_height="10dp"
        app:step_width="5dp"
        app:steps="4"
        app:thumb_drawable="@drawable/thumb_green_alpha"
        app:tick_mark_gravity="center"
        app:tick_mark_layout_gravity="bottom"
        app:tick_mark_mode="number"
        app:tick_mark_text_array="@array/markArray4"
        app:tick_mark_text_margin="20dp" />

</LinearLayout>
