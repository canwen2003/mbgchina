<?xml version="1.0" encoding="utf-8"?>

<com.mbg.module.ui.view.scrollview.ZoomScrollView
    android:id="@+id/head_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner="5dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner="100dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:corner="10dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:border_color="@color/colorPrimary"
                app:border_width="2dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:corner_left_top="20dp"
                app:corner_right_top="20dp"
                app:corner_left_bottom="20dp"
                app:corner_right_bottom="20dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:oval="true"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="600dp"/>

        </LinearLayout>

    </com.mbg.module.ui.view.scrollview.ZoomScrollView>
