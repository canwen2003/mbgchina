<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_test1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button2"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button3"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_test4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/cardview_light_background"
                android:text="button4"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner_radius="5dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:corner_radius="100dp" />

            <com.mbg.module.ui.image.view.RecyclerImageView
                android:id="@+id/img_test2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:corner_radius="10dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:border_color="@color/colorPrimary"
                app:border_width="2dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                app:corner_radius_top_left="20dp"
                app:corner_radius_top_right="20dp"
                app:corner_radius_bottom_left="20dp"
                app:corner_radius_bottom_right="20dp"
                android:src="@drawable/ic_launcher_foreground" />

            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:oval="true"/>
            <com.mbg.module.ui.image.view.RoundedImageView
                android:id="@+id/img_test7"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_launcher_foreground"
                app:border_color="@color/colorAccent"
                app:border_width="2dp"
                app:oval="true"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
